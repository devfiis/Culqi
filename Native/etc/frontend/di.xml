<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="Culqi\Native\Model\ConfigProvider" type="Magento\Payment\Model\CcGenericConfigProvider">
        <arguments>
            <argument name="methodCodes" xsi:type="array">
                <item name="culqi_pay" xsi:type="const">Culqi\Native\Model\Payment::CODE</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="Culqi\Native\Model\Config" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Culqi\Native\Model\Payment::CODE</argument>
        </arguments>
    </virtualType>

    <type name="Culqi\Native\Model\AdditionalConfigProvider">
        <arguments>
            <argument name="config" xsi:type="object">Culqi\Native\Model\Config</argument>
        </arguments>
    </type>

    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="culqi_pay_config_provider" xsi:type="object">Culqi\Native\Model\ConfigProvider</item>
                <item name="additional_config_provider" xsi:type="object">Culqi\Native\Model\AdditionalConfigProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Culqi\Native\Model\LogData">
        <arguments>
            <argument name="config" xsi:type="object">Culqi\Native\Model\Config</argument>
        </arguments>
    </type>
    <type name="Culqi\Native\Model\Payment">
        <arguments>
            <argument name="logRequest" xsi:type="object">Culqi\Native\Model\LogData</argument>
        </arguments>
    </type>
</config>
